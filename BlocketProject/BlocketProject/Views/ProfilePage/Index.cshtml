@model BlocketProject.Models.ViewModels.ProfilePageViewModel

<h2>@Model.Heading</h2>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="UserTable" class="left">
    <tr>
        <td>
            <img src="@Model.Fbuser.ImageUrl" />
        </td>
    </tr>
    <tr>
        <td>@Model.Fbuser.FirstName @Model.Fbuser.LastName </td>
    </tr>
    <tr>
        <td>
            @Model.Fbuser.Location
        </td>
    </tr>

</table>


<table id="UserAds" class="right">
    @foreach (var ad in Model.ListUserAds)
    {
        <tr>
            <td>
                <a href="#">@ad.Title<br /><img src="@ad.ImageUrl" style="max-height: 100px; max-width:100px;" class="center-block"></a>
            </td>
        </tr>

    }
</table>
