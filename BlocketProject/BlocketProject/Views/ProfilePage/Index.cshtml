@model BlocketProject.Models.ViewModels.ProfilePageViewModel

<h2>@Model.Heading</h2>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table id="UserTable" style="margin: 30px;">
    <tr>
        <td>
            <img src="@Model.Fbuser.ImageUrl" />
        </td>
    </tr>
    <tr>
        <td>@Model.Fbuser.FirstName @Model.Fbuser.LastName </td>
    </tr>
    <tr>
        <td>
            @Model.Fbuser.Location
        </td>
    </tr>

</table>
<b>Skapade annonser: @Model.Fbuser.NumberOfAds</b>
<table id="UserAds">
    <tr>

        @foreach (var ad in Model.ListUserAds)
        {
            <td style="text-align: center; margin: 30px; float: left;">
                @using (Html.BeginForm("Index", "AdsPage", new { AdId = ad.AdId }, FormMethod.Post))
                {
                    <button style="padding: 0; border: none; background:none;" type="submit">@ad.Title<br /><img src="@ad.ImageUrl" style="border-radius: 5px;height: 100px; width:100px;"></button>
                }
                <br />
                <input type="submit" value="Remove" />
            </td>


        }

    </tr>
</table>